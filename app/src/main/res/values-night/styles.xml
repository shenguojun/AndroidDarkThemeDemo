<resources>

    <style name="DayNightAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/color_bg_1</item>
        <item name="colorPrimaryDark">@color/color_bg_1</item>
        <item name="colorAccent">@color/color_main_1</item>
        <item name="android:textColor">@color/color_text_0</item>
        <item name="android:textColorPrimary">@color/color_text_0</item>
        <item name="android:colorControlNormal">@color/color_text_0</item>
        <item name="android:windowBackground">@color/color_bg_1</item>
        <item name="android:navigationBarColor">@color/color_bg_1</item>
        <item name="android:statusBarColor">@color/color_bg_1</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="LightAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/color_bg_1</item>
        <item name="colorPrimaryDark">@color/color_bg_1</item>
        <item name="colorAccent">@color/color_main_1</item>
        <item name="android:textColor">@color/color_text_0</item>
        <item name="android:textColorPrimary">@color/color_text_0</item>
        <item name="android:colorControlNormal">@color/color_text_0</item>
        <item name="android:windowBackground">@color/color_bg_1</item>
        <item name="android:navigationBarColor">@color/color_bg_1</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>

</resources>